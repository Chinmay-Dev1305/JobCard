@model JobCard.Models.JobCardViewModel

@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JobCard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container">
        <main role="main" class="pb-3">
            <div class="row pt-2">
                <div class="col-md-1">
                    <img src="~/Images/csir.png" style=" margin:10px;" />
                </div>
                <div class="col-md-10 text-center">
                   <h4>CENTRAL LEATHER RESEARCH INSTITUTE</h4>
                    <h6>Chennai - 600020</h6>
                    <h5>Computer Centre - Job Card</h5>
                </div>
                <div class="col-md-1">
                    <img src="~/Images/clri-logo.png" style=" margin:10px;" />
                </div>
            </div>
           
            <hr />
            @if (Model.Id != null)
            {
                <div class="row">
                    <h4>Thank you for submitting. Your job card number is @Model.JobId</h4>
                </div>
            }
            else
            {
                <div class="row">
                    <div class="col-md-8">
                        <form asp-action="Index">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Name" class="control-label font-weight-bold"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Designation" class="control-label font-weight-bold"></label>
                                <input asp-for="Designation" class="form-control" />
                                <span asp-validation-for="Designation" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Division" class="control-label font-weight-bold"></label>
                                <input asp-for="Division" class="form-control" />
                                <span asp-validation-for="Division" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label font-weight-bold">Intercom No. of the Indentor</label>
                                <input type="number" asp-for="Indentor" class="form-control" />
                                <span asp-validation-for="Indentor" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email" class="control-label font-weight-bold"></label>
                                <input type="email" asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PhoneNumber" class="control-label font-weight-bold">Mobile Number</label>
                                <input asp-for="PhoneNumber" class="form-control" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DateOfCompletion" class="control-label font-weight-bold">Date Of Completion</label>
                                <input type="date" asp-for="DateOfCompletion" class="form-control" />
                                <span asp-validation-for="DateOfCompletion" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="NatureOfService" class="control-label font-weight-bold">Nature of Service</label><br />

                                <input asp-for="NatureOfService" type="radio" name="NatureOfService" value="HardwareProblem-System" />
                                Hardware problem-System<br />

                                <input asp-for="NatureOfService" type="radio" name="NatureOfService" value="HardwareProblem-Printer" />
                                Hardware problem-Printer<br />

                                <input asp-for="NatureOfService" type="radio" name="NatureOfService" value="HardwareProblem-Scanner" />
                                Hardware problem-Scanner<br />

                                <input asp-for="NatureOfService" type="radio" name="NatureOfService" value="Network Problem" />
                                Network problem<br />

                                <input asp-for="NatureOfService" type="radio" name="NatureOfService" value="Software Installation" />
                                Software Installation<br />
                                <span asp-validation-for="NatureOfService" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Submit" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            }

        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - JobCard - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

</body>
</html>



